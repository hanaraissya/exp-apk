<com.google.android.material.appbar.MaterialToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_home"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/bg_toolbar"
    app:titleTextColor="@android:color/white"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <ImageView
        android:id="@+id/toolbar_home_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="start"
        android:src="@drawable/logo_topbar"/>

    <!-- QR Icon & Text Layout Group -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <!-- Toolbar Text -->
        <TextView
            android:id="@+id/toolbar_textLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="@color/gray_200"
            android:layout_marginEnd="12dp"
            android:text="PBC3225A30142 SN\n10362516 TID\nF2023.3.5.2.4 Ver"
            tools:ignore="RtlCompat"/>

        <!-- QR Icon -->
        <ImageView
            android:id="@+id/toolbar_qr_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_qrscan"/>

    </LinearLayout>
</com.google.android.material.appbar.MaterialToolbar>